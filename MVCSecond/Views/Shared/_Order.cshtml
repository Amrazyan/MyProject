@model IEnumerable<MVCSecond.Models.AllModel>
<table class="mytable" id="tabledata">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AvandName)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Percent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.BankName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.order_date)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.Percent != 0)
        {


            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AvandName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Percent)
                </td>
                <th>
                    @Html.DisplayFor(modelItem => item.Price)
                </th>
               
                <td>
                    @Html.DisplayFor(modelItem => item.BankName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.order_date)
                </td>

            </tr>
        }
    }
</table>